# -- ALIAS

def _rcpull(args):
    parser = ArgumentParser(description='pull latest .xonshrc')
    args = parser.parse_args(args)
    cd $WORKSETUP_ROOT/windowssetup
    ggpull
    cp .xonshrc ~/
    cd -

